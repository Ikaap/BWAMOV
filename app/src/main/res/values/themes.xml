<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BWAMOV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Button-->
    <style name="firstbtn">
        <item name="backgroundTint">@color/Pink</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_rectangle_pink</item>
    </style>

    <style name="secondbtn">
        <item name="backgroundTint">@color/BlueGrey</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_rectangle_blue_grey</item>
    </style>

</resources>